@model LonghornCinemaFinalProject.Models.Order
@using LonghornCinemaFinalProject.Models
@{
    ViewBag.Title = "Create";
}

<h2>Seat Selection</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.OrderID)
        
        <div>
            <hr />
            <dl class="dl-horizontal">

                <dt>
                    @Html.DisplayNameFor(model => model.OrderDate)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.OrderDate)
                </dd>
                <dt>
                    Email
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.AppUser.Email)
                </dd>
                <dt>
                    Movie
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Tickets.First().Showing.Movie.Title)
                </dd>
                <dt>
                    Start Time
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Tickets.First().Showing.StartTime)
                </dd>
            </dl>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add to Order" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Showings", "Index","Showings")
</div>
