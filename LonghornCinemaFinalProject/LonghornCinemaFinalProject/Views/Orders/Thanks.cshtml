@model LonghornCinemaFinalProject.Models.Order

@{
    ViewBag.Title = "Thanks";
}

<h2>Thank You</h2>

<div>
    <dl class="dl-horizontal"></dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <h3>We appreciate your business!</h3>
        <div class="thumbnail">
            <img src="https://lajoyalink.com/wp-content/uploads/2018/03/Movie.jpg">
            <div class="caption">
                <h3>Enjoy the movie! Your confirmation number is: @Html.DisplayFor(model => model.ConfirmationCode)</h3>
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-primary btn-block" })
            </div>
        </div>
    }
</div>
